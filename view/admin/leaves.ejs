<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>مدیریت مرخصی‌ها - Kartext</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .badge { font-size: 0.8rem; }
        .table th { border-top: none; }
        .btn-sm { padding: 0.25rem 0.5rem; font-size: 0.8rem; }
    </style>
</head>
<body>
    <%- include('partials/admin-header') %>
    
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">مدیریت درخواست‌های مرخصی</h2>
            <span class="badge bg-primary fs-6">تعداد: <%- leaves.length %></span>
        </div>
        
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-check"></i>
                    لیست درخواست‌ها
                </h5>
            </div>
            <div class="card-body p-0">
                <% if (leaves && leaves.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th width="120">کاربر</th>
                                    <th width="80">نوع</th>
                                    <th width="100">تاریخ شروع</th>
                                    <th width="100">تاریخ پایان</th>
                                    <th width="80">ساعت</th>
                                    <th width="100">وضعیت</th>
                                    <th width="150">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% leaves.forEach(function(leave) { %>
                                <tr>
                                    <td class="fw-bold">
                                        <i class="bi bi-person-circle text-primary"></i>
                                        <%- leave.User ? leave.User.username : 'نامشخص' %>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <%- leave.type === 'HOURLY' ? 'ساعتی' : 'روزانه' %>
                                        </span>
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar3 text-success"></i>
                                        <%- new Date(leave.startDate).toLocaleDateString('fa-IR') %>
                                    </td>
                                    <td>
                                        <% if (leave.endDate) { %>
                                            <i class="bi bi-calendar3 text-success"></i>
                                            <%- new Date(leave.endDate).toLocaleDateString('fa-IR') %>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (leave.hours) { %>
                                            <span class="badge bg-secondary">
                                                <%- leave.hours %> ساعت
                                            </span>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (leave.status === 'PENDING') { %>
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> در انتظار
                                            </span>
                                        <% } else if (leave.status === 'APPROVED') { %>
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> تایید شده
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> رد شده
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (leave.status === 'PENDING') { %>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-success approve-btn" data-id="<%= leave.id %>">
                                                    <i class="bi bi-check-lg"></i> تایید
                                                </button>
                                                <button type="button" class="btn btn-danger reject-btn" data-id="<%= leave.id %>">
                                                    <i class="bi bi-x-lg"></i> رد
                                                </button>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted small">
                                                <i class="bi bi-check2-all"></i> انجام شده
                                            </span>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h5 class="text-muted mt-3">هیچ درخواست مرخصی‌ای وجود ندارد</h5>
                        <p class="text-muted">هیچ درخواست مرخصی در حال انتظار وجود ندارد.</p>
                    </div>
                <% } %>
            </div>
            <% if (leaves && leaves.length > 0) { %>
            <div class="card-footer bg-light">
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            برای تایید یا رد درخواست‌ها از دکمه‌های مربوطه استفاده کنید.
                        </small>
                    </div>
                    <div class="col-md-6 text-start">
                        <small class="text-muted">
                            آخرین بروزرسانی: <%- new Date().toLocaleTimeString('fa-IR') %>
                        </small>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Modal برای تایید -->
    <div class="modal fade" id="confirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تایید عملیات</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="modalMessage">آیا از این عملیات مطمئن هستید؟</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لغو</button>
                    <button type="button" class="btn btn-primary" id="confirmAction">تایید</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentLeaveId = null;
        let currentAction = null;

        // Event Delegation برای کلیک روی دکمه‌ها
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('approve-btn')) {
                const leaveId = e.target.getAttribute('data-id');
                showConfirmModal(leaveId, 'approve', 'آیا از تایید این درخواست مرخصی مطمئن هستید؟');
            }
            
            if (e.target.classList.contains('reject-btn')) {
                const leaveId = e.target.getAttribute('data-id');
                showConfirmModal(leaveId, 'reject', 'آیا از رد این درخواست مرخصی مطمئن هستید؟');
            }
        });

        // نمایش مودال تایید
        function showConfirmModal(leaveId, action, message) {
            currentLeaveId = leaveId;
            currentAction = action;
            document.getElementById('modalMessage').textContent = message;
            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            modal.show();
        }

        // تایید عملیات از مودال
        document.getElementById('confirmAction').addEventListener('click', function() {
            if (currentAction === 'approve') {
                approveLeave(currentLeaveId);
            } else if (currentAction === 'reject') {
                rejectLeave(currentLeaveId);
            }
            
            const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
            modal.hide();
        });

        // تایید مرخصی
        function approveLeave(leaveId) {
            fetch('/admin/leaves/' + leaveId + '/approve', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    showToast('success', 'درخواست مرخصی با موفقیت تایید شد');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('error', 'خطا: ' + result.error);
                }
            })
            .catch(error => {
                showToast('error', 'خطا در ارتباط با سرور');
            });
        }

        // رد مرخصی
        function rejectLeave(leaveId) {
            fetch('/admin/leaves/' + leaveId + '/reject', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    showToast('success', 'درخواست مرخصی با موفقیت رد شد');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('error', 'خطا: ' + result.error);
                }
            })
            .catch(error => {
                showToast('error', 'خطا در ارتباط با سرور');
            });
        }

        // نمایش نوتیفیکیشن
        function showToast(type, message) {
            // ایجاد یک نوتیفیکیشن ساده
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            toast.style.cssText = 'top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px;';
            toast.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(toast);
            
            // حذف خودکار بعد از 5 ثانیه
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 5000);
        }

        // رفراش خودکار هر 30 ثانیه
        setInterval(() => {
            // فقط اگر صفحه فعال باشه رفراش کنه
            if (!document.hidden) {
                console.log('Auto-refreshing leaves list...');
                // می‌تونید اینجا داده‌ها رو از API بگیرید و فقط جدول رو آپدیت کنید
                // یا برای سادگی کل صفحه رو ریلود کنید
                // location.reload();
            }
        }, 30000);
    </script>
</body>
</html>